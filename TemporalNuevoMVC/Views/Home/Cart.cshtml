@model IEnumerable<TemporalNuevoMVC.Models.ProductsViewModel>
@{
    ViewData["Title"] = "Cart";
    int i = 0;
}

<style>
    .carousel-item {
        display: block;
        width: 100%;
        height: 200px;
    }

        .carousel-item img {
            height: 100%;
            width: 100%;
        }

    .firstButton {
        background-color: #3C4BAF;
        border: none;
        padding: 12px 35px;
        border-radius: 22px;
        font-size: 15px;
        width: 100%
    }
    
    .secondButton {
        border: none;
        padding: 12px 35px;
        font-size: 15px;
        background-color: #3CAFAA;
        border-radius: 22px;
        width: 100%
    }
    
    .thirdButton {
        background-color: white;
        border: solid;
        padding: 12px 35px;
        border-radius: 22px;
        font-size: 15px;
        color: #3CAFAA;
        border-color: #3CAFAA;
        width: 100%
    }
</style>

<div class="row">
    <div class="col-sm-4">
        <div id="carouselExample" class="carousel slide">
            <div class="carousel-inner">
                @foreach (var item in Model)
                {
                    i++;
                    var active = i == 1 ? "active" : "";
                    <div class="carousel-item @active">
                        <img src="~/Image/@item.Image" class="d-block w-100" alt="@item.Name">
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <div class="col-sm-8">
        <div class="row justify-content-md-center">
            <h2>@Html.DisplayFor(m => m.FirstOrDefault().Name)</h2>
        </div>
        <hr />
        <div class="row justify-content-md-center">
            <div class="col-sm-2">
                <p>Estado:</p>
                <p>Cantidad</p>
            </div>
            <div class="col-sm-2">
                <p>@Html.DisplayFor(m => m.FirstOrDefault().State)</p>
                <input Style="background:#FFFFFF80; border-style: solid;" type="number" />
            </div>
            <div class="col-sm-8">
                <p>Vendidos @Html.DisplayFor(m => m.FirstOrDefault().Sold)</p>
            </div>
        </div>
        <hr />

        <div class="row justify-content-md-center">
            <div class="col-sm-6">
                <p>Precio: <h2>USD @Html.DisplayFor(m => m.FirstOrDefault().Price)</h2></p>
            </div>
            <div class="col-sm-6">
                <button class="firstButton">¡Cómpralo ahora!</button>
                <button class="secondButton">Agregar al carro de compras</button>
                <button class="thirdButton">Agregar a la lista de favoritos</button>
            </div>
        </div>
    </div>



</div>

<div class="row">
</div>
